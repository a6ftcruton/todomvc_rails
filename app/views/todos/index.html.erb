<body>
  <section id="todoapp">
    <header id="header">
      <h1>todos</h1>
      <div>
        <%= form_for @todo do |f| %> 
          <%= f.text_field :name, placeholder: "What needs to be done?", id: "new-todo" %>
          <%#= f.submit "Save", id: "submit"  %>
        <% end %>      
      </div>
    </header>
    <section id="main">
      <ul id="todo-list">
        <% @todos.each do |todo| %>
          <li class="todo">
            <%= check_box_tag 'completed', "✓", todo.completed, id: "#{todo.id}", class: "checkbox" %>
            <%= label_tag 'completed', "✓", class: "check" %>
            <%= link_to todo.name, todo_path(todo), class: "name" %>
            <%= link_to "X", todo_path(todo), method: :delete, class: "delete-x" %>
          </li>
        <% end %>
      </ul>
    </section>
  </section>
</body>
